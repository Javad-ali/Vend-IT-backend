# Copy to `.env` and replace placeholder values.

# ---------------------------------------------------------
# Core application
# ---------------------------------------------------------
NODE_ENV=development
HOST=0.0.0.0
PORT=3000
APP_BASE_URL=https://your-app-domain.example.com
NUNJUCKS_WATCH=true

# ---------------------------------------------------------
# Supabase + database connectivity
# ---------------------------------------------------------
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<supabase-service-role-key>
SUPABASE_ANON_KEY=<supabase-anon-key>
SUPABASE_DB_URL=postgresql://user:password@host:5432/database

# ---------------------------------------------------------
# Redis / queues
# ---------------------------------------------------------
REDIS_URL=redis://localhost:6379

# ---------------------------------------------------------
# Auth / security
# ---------------------------------------------------------
JWT_ACCESS_SECRET=<jwt-access-secret>
JWT_REFRESH_SECRET=<jwt-refresh-secret>
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
COOKIE_SECRET=<cookie-secret>

# ---------------------------------------------------------
# Firebase (for notifications / storage)
# ---------------------------------------------------------
FIREBASE_SERVICE_ACCOUNT=
FIREBASE_PROJECT_ID=<firebase-project-id>
FIREBASE_CLIENT_EMAIL=<firebase-client-email>
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n<key>\n-----END PRIVATE KEY-----\n"

# ---------------------------------------------------------
# Tap Payments
# ---------------------------------------------------------
TAP_API_BASE_URL=https://api.tap.company/v2
TAP_SECRET_KEY=<tap-secret-key>
TAP_PUBLIC_KEY=<tap-public-key>
TAP_DEFAULT_CURRENCY=KWD
TAP_COUNTRY_CODE=965
TAP_WEBHOOK_SECRET=<tap-webhook-secret>
SILKRON_WEBHOOK_SECRET=<silkron-webhook-secret>

# ---------------------------------------------------------
# Loyalty / referrals
# ---------------------------------------------------------
LOYALTY_BASE_RATE=10
LOYALTY_HEALTHY_MULTIPLIER=1.5
LOYALTY_LOW_HEALTH_MULTIPLIER=1
LOYALTY_POINT_VALUE=0.001
REFERRAL_INVITER_POINTS=250
REFERRAL_INVITEE_POINTS=250
REFERRAL_SHARE_BASE_URL=https://your-app-domain.example.com/referral
REFERRAL_SHARE_MESSAGE=Join%20Vend-IT%20and%20earn%20rewards!

# ---------------------------------------------------------
# Email + CDN
# ---------------------------------------------------------
EMAIL_FROM=no-reply@your-app-domain.example.com
CDN_BASE_URL=https://cdn.your-app-domain.example.com

# ---------------------------------------------------------
# Remote machine integration
# ---------------------------------------------------------
REMOTE_MACHINE_BASE_URL=https://remote-machine-api.example.com
REMOTE_MACHINE_API_KEY=<remote-machine-api-key>
REMOTE_MACHINE_PAGE_SIZE=100
DISPENSE_SOCKET_URL=wss://central-6vfl.onrender.com

# ---------------------------------------------------------
# Optional integrations
# ---------------------------------------------------------
VYRO_API_URL=https://api.vyro.ai/v1/imagine/api/generations
VYRO_API_KEY=<vyro-api-key>
NGROK_AUTHTOKEN=<ngrok-token>

# ---------------------------------------------------------
# SMS / OTP configuration
# Switched to SMSBox provider
# ---------------------------------------------------------
SMS_DRIVER=remote
SMS_API_URL=http://smsbox.com/smsgateway/services/messaging.asmx/Http_SendSMS
SMS_USERNAME=vendit
SMS_PASSWORD=<sms-password>
SMS_CUSTOMER_ID=3461
SMS_SENDER=VEND IT
ALLOW_SMS_FALLBACK=false

# ---------------------------------------------------------
# Miscellaneous
# ---------------------------------------------------------
APP_URL=https://your-app-domain.example.com
